<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netcoreapp2.2</TargetFramework>
		<RootNamespace>FlaivySharp</RootNamespace>
		<Version>0.0.2</Version>
	</PropertyGroup>
	<PropertyGroup>
		<Description>FlaivySharp is a C# and .NET library that helps developers easily authenticate with and manage Flaivy stores.</Description>
		<Authors>Sumit Khunger</Authors>
		<Copyright>Prime Penguin</Copyright>
		<LangVersion>latest</LangVersion>
		<PackageLicenseUrl>https://raw.githubusercontent.com/PrimePenguin/FlaivySharp/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/PrimePenguin/FlaivySharp</PackageProjectUrl>
		<RepositoryUrl>https://github.com/PrimePenguin/FlaivySharp</RepositoryUrl>
		<PackageTags>Flaivy,ecommerce</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageIconUrl>https://raw.githubusercontent.com/PrimePenguin/FlaivySharp/master/PrimePenguin.png</PackageIconUrl>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Infrastructure\**" />
		<EmbeddedResource Remove="Infrastructure\**" />
		<None Remove="Infrastructure\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Abp" Version="5.12.0" />
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
	</ItemGroup>

</Project>
